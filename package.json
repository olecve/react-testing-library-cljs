{
  "name": "react-testing-library-cljs",
  "scripts": {
    "generate:screen": "cd scripts && bb ./generate_screen.clj",
    "generate:fire-event": "cd scripts && bb ./generate_fire_event.clj",
    "watch": "npx shadow-cljs watch app",
    "release": "npx shadow-cljs release app",
    "test": "npx shadow-cljs compile test && node --require global-jsdom/register out/test.js",
    "test:watch": "npx shadow-cljs watch test --config-merge \"{:autorun true}\""
  },
  "devDependencies": {
    "global-jsdom": "^28.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shadow-cljs": "3.3.6"
  },
  "dependencies": {
    "@testing-library/react": "16.3.2"
  }
}
